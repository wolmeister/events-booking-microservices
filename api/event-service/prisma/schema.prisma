generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id                  String   @id @default(uuid())
  ownerId             String
  name                String
  location            String
  description         String?
  certificateTemplate String?
  date                DateTime
  cancelUntil         DateTime
  totalSlots          Int
  availableSlots      Int
  createdAt           DateTime @default(now())
}
